---
import { Cart } from '@/components/Cart.jsx';

const NAV_LINKS = [
  {
    label: 'Novedades',
    href: '#news',
  },
  {
    label: 'Catalogo',
    href: '#catalogue',
  },
];
---

<header
  class="fixed top-0 z-10 w-full flex justify-between items-center py-2 lg:py-3 px-6 sm:px-10 lg:px-16 border-b-3 border-black/20 backdrop-blur-2xl"
>
  <a href="/">
    <img
      class="w-32 sm:w-48 lg:w-64"
      src="/logo.svg"
      alt="Logo de SneakerStore"
    />
  </a>
  <nav class="flex gap-x-2 sm:gap-x-6 lg:gap-x-16">
    {
      NAV_LINKS.map((link) => (
        <a
          class="uppercase font-rubik font-semibold tracking-wide text-base sm:text-xl lg:text-2xl inline-block hover:text-blue-500 hover:scale-110 transition"
          href={link.href}
        >
          {link.label}
        </a>
      ))
    }
  </nav>
  <div class="flex gap-4">
    <Cart client:load />
  </div>
</header>
